procedure TForm1.Button1Click(Sender: TObject);
begin
  timer1.enabled := True;
end;

procedure TForm1.Button2Click(Sender: TObject);
begin
   timer1.enabled := False;
end;

procedure TForm1.Timer1Timer(Sender: TObject);
begin
  shape1.left := shape1.left + 10;
  if shape1.left > 68  then
  shape1.left := 55;

  shape2.left := shape2.left + 5;
  if shape2.left > 68 then
  shape2.left := 40;

  shape3.left := shape3.left + 25;
  if shape3.left > 168 then
  shape3.left := 80;

  shape4.left := shape4.left + 64;
  if shape4.left > 20  then
  shape4.left := 55;

  shape5.left := shape5.left + 3;
  if shape5.left > 90 then
  shape5.left := 100;

  shape6.left := shape6.left + 25;
  if shape6.left > 168 then
  shape6.left := 80;

  shape7.left := shape7.left + 10;
  if shape7.left > 68  then
  shape7.left := 55;

  shape8.left := shape8.left + 5;
  if shape8.left > 68 then
  shape8.left := 40;

  shape9.left := shape9.left + 25;
  if shape9.left > 168 then
  shape9.left := 80;

  shape10.left := shape10.left + 64;
  if shape10.left > 20  then
  shape10.left := 55;

  shape11.left := shape11.left + 3;
  if shape11.left > 90 then
  shape11.left := 100;

  shape12.left := shape12.left + 25;
  if shape12.left > 168 then
  shape12.left := 80;
